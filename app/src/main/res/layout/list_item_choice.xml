<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_choice_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Task Title"
        />


    <TextView
        android:id="@+id/list_item_choice_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_choice_type_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Task Title"
        />

    <TextView
        android:id="@+id/list_item_choice_address_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_choice_title_text_view"
        android:padding="4dp"
        tools:text="Task Due Date"/>

    <TextView
        android:id="@+id/list_item_choice_distance_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_choice_address_text_view"
        android:padding="4dp"
        tools:text="Task Due Date"/>

</RelativeLayout>